import { NextRequest, NextResponse } from 'next/server'

import { getPopularFaqItems } from '@/lib/db/queries/faq'

export async function GET(req: NextRequest) {
  try {
    const searchParams = req.nextUrl.searchParams
    const limit = parseInt(searchParams.get('limit') || '10')

    const popularFaqs = await getPopularFaqItems(limit)

    return NextResponse.json(popularFaqs)
  } catch (_error) {
    console.error('Failed to fetch popular FAQs:', error)
    return NextResponse.json(
      { error: 'Failed to fetch popular FAQs' },
      { status: 500 }
    )
  }
}
